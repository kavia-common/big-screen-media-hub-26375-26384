<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vodCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_card"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/vodThumbText"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/bg_thumbnail"
        android:gravity="center"
        android:text="BUNNY"
        android:textColor="@color/ocean_text"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vodTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/ocean_text"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vodCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/ocean_text_muted"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/vodActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/actionPlay"
            style="@style/Widget.Ocean.ActionButton"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:text="@string/action_play" />

        <TextView
            android:id="@+id/actionFavorite"
            style="@style/Widget.Ocean.ActionButtonSecondary"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_marginLeft="12dp"
            android:text="@string/action_favorite" />
    </LinearLayout>
</LinearLayout>
