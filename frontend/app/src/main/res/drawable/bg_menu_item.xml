<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#1A2B52" />
            <corners android:radius="14dp" />
            <stroke android:width="2dp" android:color="@color/ocean_focus" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="#162548" />
            <corners android:radius="14dp" />
            <stroke android:width="1dp" android:color="#2B3F66" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/ocean_surface_2" />
            <corners android:radius="14dp" />
            <stroke android:width="1dp" android:color="#22314F" />
        </shape>
    </item>
</selector>
