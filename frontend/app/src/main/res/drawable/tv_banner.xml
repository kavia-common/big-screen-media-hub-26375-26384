<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- TV banner recommended size is 320x180dp-ish; launcher scales as needed.
         We provide a simple vector-like shape banner (no bitmap assets required). -->
    <item>
        <shape>
            <solid android:color="@color/ocean_primary" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item android:left="18dp" android:top="18dp" android:right="18dp" android:bottom="18dp">
        <shape>
            <solid android:color="@color/ocean_surface" />
            <corners android:radius="14dp" />
            <stroke android:width="2dp" android:color="@color/ocean_secondary" />
        </shape>
    </item>
</layer-list>
