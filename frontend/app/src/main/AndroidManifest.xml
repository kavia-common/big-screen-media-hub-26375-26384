<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Needed for ExoPlayer playback from network URLs -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Optional TV hinting (won't break non-TV devices) -->
    <uses-feature android:name="android.software.leanback" android:required="false" />

    <!-- TV devices typically don't have touch; ensure Play Store filtering doesn't exclude them -->
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:banner="@drawable/tv_banner"
        android:theme="@style/Theme.OceanProfessional">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:launchMode="singleTask">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- TV launcher -->
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
                <!-- Fallback launcher -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
